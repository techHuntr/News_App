        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/montserrat_semibold
        </item>
    </style>

    <style name="TextBlackNormalStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/montserrat_medium</item>
