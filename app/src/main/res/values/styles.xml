        <item name="android:background">@drawable/bg_slim_stroke_blue_corner_round</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="TextInputLayoutTheme">
        <item name="android:textColorHighlight">@color/colorDarkGrey</item>
        <item name="android:textColorLink">@color/colorPurple</item>
        <item name="android:textColorHint">@color/colorDarkGrey</item>
        <item name="colorAccent">@color/colorPurple</item>
        <item name="colorControlNormal">@color/colorPurple</item>
        <item name="android:textStyle">normal</item>
        <item name="colorControlActivated">@color/colorPurple</item>
